page {
    background-color: #eeeded;
}

.page {
    padding: 40rpx;
}

.row {
    display: flex;
    margin-top: 20rpx;
}

.row text {
    flex: 0 0 150rpx;
    color: #656565;
    font-size: 30rpx;
    line-height: 80rpx;
}

.row input {
    width: 100%;
    height: 80rpx;
    padding: 10rpx 20rpx;
    background-color: #fff;
    border: 1px solid #eeeded;
    font-size: 30rpx;
    line-height: 40rpx;
}

.row textarea {
    width: 100%;
    height: 320rpx;
    padding: 20rpx;
    background-color: #fff;
    border: 1px solid #eeeded;
    font-size: 30rpx;
    line-height: 40rpx;
}
.btn_submit{
	height: 80rpx;
	margin-top: 40rpx;
	margin-left: 150rpx;
	background-color: #5b7b88;
	color: #fff;
	border-radius: 0;
	font-size: 32rpx;
	line-height: 80rpx;
}