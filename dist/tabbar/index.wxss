.tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
    display: flex;
    align-items: center;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    /* border-top: 1px solid #b6c3c9; */
	/* box-shadow: 0 0 3px 1px rgba(51,51,51,.1); */
     box-shadow: 0 1px #b6c3c9 inset,0 -2px 2px rgba(0, 0, 0, 0.1);
}

.tabbar .tab {
    position: relative;
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tabbar .tab image {
    width: 44rpx;
    height: 44rpx;
    margin-bottom: 10rpx;
}

.tabbar .tab text {
    color: #12898a;
    font-size: 26rpx;
    line-height: 1;
}

.tabbar .active text {
    color: #000;
}

.tabbar button {
    position: absolute;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    background: none;
    color: #5a7b88;
    border-radius: 0;
    font-size: 80rpx;
    line-height: 120rpx;
    opacity: 0;
}

.tabbar button::after {
    content: none;
}

.tabbar .btn {
    background-color: #5a7b88;
    color: #fff;
    font-size: 30rpx;
    line-height: 120rpx;
    text-align: center;
}

.tabbar .btn1 {
    flex: 3;
}

.tabbar .btn2 {
    flex: 0 0 23%;
    margin-right: 20rpx;
    height: 90rpx;
    background: none;
    color: #000;
    border: 1px solid #aaa;
    line-height: 90rpx;
}

.tabbar .btn3 {
    flex: 0 0 23%;
    height: 90rpx;
    margin-right: 20rpx;
    line-height: 90rpx;
}
