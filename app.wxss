/**app.wxss**/
image {
   width: 0;
   height: 0;
}

view {
	box-sizing: border-box;
}

.clearfix:after {
    content: " ";
    visibility: hidden;
    display: block;
    height: 0;
    clear: both;
}

.lightbox{
    overflow: hidden;
  	background: rgba(0,0,0,.5);
  	position: fixed;
  	top: 0px;
  	left: 0px;
  	width: 100%;
  	height: 100%;
}
