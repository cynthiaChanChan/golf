page {
    background-color: #eee;
}

.list .li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #d2d2d2;
}

.list .li:nth-child(2), .list .li:nth-child(5) {
    margin-top: 10rpx;
    border-top: 1px solid #d2d2d2;
}

.list .li .li-l {
    flex: 0 0 20%;
    /* flex: 1; */
    color: #656565;
    font-size: 30rpx;
    line-height: 1;
}

.list .li .li-r {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.list .li .li-r label {
    width: 100%;
}

.list .li .li-r image {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.list .li .li-r .arrow-right {
    width: 12px;
    height: 12px;
    border-width: 2px 2px 0 0;
    border-color: #9d9d9d;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.list .li .li-r input, .list .li .li-r text {
    color: #9d9d9d;
    font-size: 30rpx;
    line-height: 40rpx;
    text-align: right;
}

.list .li .li-r picker {
    width: 100%;
    height: 40rpx;
    color: #9d9d9d;
    font-size: 30rpx;
    line-height: 40rpx;
    text-align: right;
}

button {
    margin: 0;
    padding: 0;
    border-radius: 0;
}

button::after {
    content: none;
}

.btn_save {
    width: 40%;
    height: 80rpx;
    margin: 40rpx auto;
    background: #12898a;
    color: #fff;
    font-size: 30rpx;
    line-height: 80rpx;
}
