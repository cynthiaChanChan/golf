/**index.wxss**/
page {
  height: 100%;
  width: 100%;
}
.page {
  position: relative;
  text-align: center;
  padding: 15% 5% 0;
  width: 100%;
  height: 100%;
  background: bottom /cover url("https://www.korjo.cn/xcx/golfImg/bg.jpg") fixed no-repeat;
}

.logo {
  width: 35%;
  margin: 0 auto;
}

.title {
  color: #101a27;
  letter-spacing: 2rpx;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.ul {
  padding: 0 2%;
  width: 100%;
  bottom: 10%;
  left: 0;
  position: absolute;
}

.ul .li {
  font-size: 28rpx;
  color: #fff;
  width: 24%;
  display: inline-block;
  vertical-align: middle;
}

.ul .li .liWrapper {
  margin: 0 auto;
}

.ul .li .liWrapper .icon {
  margin: 0 auto;
  width: 85%;
  border-radius: 50%;
  margin-bottom: 6rpx;
}

.intro {
  width: 100%;
  left: 0;
  position: absolute;
  bottom: 40rpx;
  color: #3f4a0b;
  font-size: 30rpx;
  text-decoration: underline;
}
